@model CreateEditShapesViewModel
@{
    ViewBag.Title = "Edit";
}
@{
    Layout = null;
}
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Stylish Portfolio - Start Bootstrap Template</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/vendor/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/Content/stylish-portfolio.min.css" rel="stylesheet" />
</head>
<body id="page-top">
    <!-- Navigation -->
    <a class="menu-toggle rounded" href="#">
        <i class="fas fa-bars"></i>
    </a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a class="js-scroll-trigger" href=@Url.Action("Index","Home")>Application name</a>
            </li>

            @if (User.Identity.IsAuthenticated)
            {
                <li class="sidebar-nav-item">
                    <a class="js-scroll-trigger" href="@Url.Action("Index","Shapes")">Shapes</a>
                </li>
            }

            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Register","Account")">Register</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Login","Account")">Log in</a>
            </li>
        </ul>
    </nav>
    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto">
            <h1 class="mb-1">Edit</h1>
            <h3 class="mb-5">
                <em>Edit Shapes</em>
            </h3>
        </div>
        <div class="overlay"></div>
    </header>
    <h2 style="text-align:center;">Edit Shapes</h2>
    <form method="post">
        @Html.ValidationSummary(false)

        <div class="form-group">
            @Html.LabelFor(p => p.ShapeType, "Type: ")
            @Html.TextBoxFor(p => p.ShapeType, new { @class = "form-control", placeholder = "Shape type" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Category)
            @Html.DropDownListFor(p => p.Category,
                                  (SelectList)ViewBag.Categories,
                                      "Select a category",
                                      new { @class = "form-control" }
                                  )
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description, "Description:")
            @Html.TextAreaFor(p => p.Description, new { @class = "form-control myDescription", placeholder = "Description", rows = 5, columns = 5 })
        </div>
        <div class="" style="margin-left:700px;">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>

    </form>

    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Scripts/stylish-portfolio.min.js"></script>
</body>
</html>


